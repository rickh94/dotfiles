#!/bin/zsh
# update dotfiles, passwords, and vim plugins
prevdir=$(pwd)
echo "Updating Dotfiles"
cd ~/Dotfiles
if [[ ! -z "$(git status -s)" ]]; then
  git add *
  git commit -s -m "update dotfiles $(date)
$(git status -s)"
  git pull
  git push
else
  git pull
fi
dotfiles -s
vim -e -s -c PluginInstall! -c qa
cd $prevdir
source ~/.zshrc

# vim: se ft=sh:
